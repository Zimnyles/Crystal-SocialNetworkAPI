package layout

import "zimniyles/fibergo/views/components"



templ Menu() {
    @MenuStyle()   
    <div class="menu">
        <div class="menu-leftpart">
            <a href="/"><img src="/public/images/logo2.png" width="160" height="48"></a>//height
            <div class="menu-leftpart-item">
                <div class="menu-leftpart-item-ico">
                    <img src="/public/icons/location-w.svg" width="24px" height="24" alt="location ico" />
                </div>
                <a class="menu__right-link">Уфа</a>
            </div>
        </div>
        
        {{ login := ctx.Value("login").(string) }}
        {{ menu__right_islogined := "" }}
        {{ if login != ""{
            menu__right_islogined = "menu__right"
        }else{
            menu__right_islogined = "menu__right_unlog"
        } }}
        <div class="menu-rightpart"> 
            <div class={ menu__right_islogined }  >
                <a class="menu__right-link-fav">Избранное</a>
                if login == "" {
                    <a  class="menu__right-link" href="login">Войти</a>
                @components.ButtonLink("/register"){
                    <span>Зарегестрироваться</span>
                    }
                } else {
                    <div class="menu-rightpart-item">
                        <div class="menu-leftpart-item-ico-user">
                            <img width="24px" height="24px" src="/public/icons/user2.svg" alt="user ico" />
                        </div>
                        <span class="menu-right-login">{ login } </span>
                    </div>
                    <a class="menu__right-link" hx-trigger="click" hx-get="/api/logout">Выход</a>
                }
            </div>
        </div>
    </div>
}

templ MenuStyle() {
    
    <style>

        .menu {
        display: flex;
        justify-content: space-between; /* Равномерное распределение */
        padding: 10px 300px; /* Отступы 300px слева и справа */
        margin: 0 auto; /* Центрирование */
        align-items: center;
        width: 100%;
        max-width: 1920px; /* Максимальная ширина */
        box-sizing: border-box; /* Чтобы padding не увеличивал ширину */
        }

        .menu-right-login{
            text-decoration: none;
            color: var(--color-white);
            font-size: 16px;
            cursor: pointer;    
        }
        .menu-leftpart-item{
            display: flex;
            flex-direction: row;
            align-items: center;
            
            gap: 10px;
            
        }

        .menu-rightpart-item{
            display: flex;
            flex-direction: row;
            align-items: center;
            gap: 10px;
            
        }

        .menu-leftpart-item-ico-user{
            color: #ffffff;
        }

        .menu-leftpart-item-ico{
            margin-left: 20px;
            color: #ffffff;
        }

        .menu-leftpart{
            display: flex;
            flex-direction: row;
            align-items: center;
            

        }

        .menu-rightpart{
            display: flex;
            flex-direction: row;
            align-items: center;
        }
        
            
        .menu__right {
            display: flex;
            gap: 20px;
            align-items: center;
    
        }

        .menu__right_unlog{
            display: flex;
            gap: 20px;
            align-items: center;
        }
    
        .menu__right-link {
            text-decoration: none;
            color: var(--color-white);
            font-size: 16px;
            cursor: pointer;
    
        }
        

        .menu__right-link-fav {
            text-decoration: none;
            color: var(--color-white);
            font-size: 16px;
            cursor: pointer;
    
        }

        .menu__right-link-fav:hover {
            color: #9f9f9f;
    
        }
    
        .menu__right-link:hover {
            color: #9f9f9f;
        }

        .menu-leftpart-item-ico img,
        .menu-leftpart-item-ico-user img {
        display: block; 
        width: 24px; 
        height: 24px;
        object-fit: contain; 
        vertical-align: middle; 
        }

        .menu-leftpart a img {  
        width: 160px;
        height: 48px;
        object-fit: contain; 
        display: block;      
        flex-shrink: 0;     
        }

    </style>
}